<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
            style="@style/ChaptersChatperRl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="40dp"
            >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_alignParentTop="true"
                      android:orientation="vertical"
                >
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="18dp"
                      android:layout_alignParentTop="true"
                      android:gravity="center"
                      android:id="@+id/tv_chapter_title"
                    />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="13dp"
                      android:padding="10dp"
                      android:id="@+id/tv_chapter_content"
                    />

            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:minHeight="300dp"
                       android:layout_centerHorizontal="true"
                       android:scaleType="fitCenter"
                       android:layout_marginTop="10dp"
                       android:id="@+id/iv_chapter_1"
                    />

            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:minHeight="300dp"
                       android:layout_centerHorizontal="true"
                       android:scaleType="fitCenter"
                       android:layout_marginTop="10dp"
                       android:id="@+id/iv_chapter_2"
                    />
        </LinearLayout>
    </ScrollView>

    <Button android:layout_width="match_parent" android:layout_height="50dp"
            android:id="@+id/btn_next"
            android:text="开始学习第1步(共5步)"
            android:layout_alignParentBottom="true"
            />

    <com.mindpin.android.loadingview.LoadingView
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/background_light"
            />
</RelativeLayout>